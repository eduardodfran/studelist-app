{
    "version": 2,
    "builds": [
      { "src": "public/**/*", "use": "@vercel/static" },
      { "src": "profile/**/*", "use": "@vercel/static" },
      { "src": "img/**/*", "use": "@vercel/static" },
      { "src": "api/**/*.js", "use": "@vercel/node" },
      { "src": "server/**/*.js", "use": "@vercel/node" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/api/$1" },
      { "src": "/(.*)", "dest": "/public/$1" }
    ]
  }
  